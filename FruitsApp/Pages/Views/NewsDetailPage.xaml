<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.NewsDetailPage"
             Title="NewsDetailPage"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="Resources/Images/share.png" x:Name="TbShare" Clicked="TbShare_Clicked"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, Auto, Auto">
        <Image HeightRequest="300" Aspect="Fill" Source="{Binding ArticleImage}"/>
        <Label Grid.Row="1" Margin="10" FontSize="Title" FontAttributes="Bold" TextDecorations="Underline"
               Text="{Binding ArticleTitle}"/>
        <Label Grid.Row="2" Margin="10" FontSize="Body" Text="{Binding ArticleBody}"/>
    </Grid>
</ContentPage>